---
import Layout from "../../layouts/Layout.astro";
import PdfStack from "../../components/PdfStack.astro";
---

<Layout title="MPhil Dissertation">
  <header class="hero">
    <a href="/projects" class="backLink">‚Üê Projects</a>
    <h1 class="title">MPhil Dissertation <br /> SEvdA Lab, Cambridge</h1>
    <p class="lede">This page outlines my work developing bespoke hardware to enable novel means of investigating the interactions between parasitic nematodes and arabidopsis, by leveraging RUBY pigment expression and nematode colouration change in HSV.</p>
  </header>


  <section class="section">
    <h2 class="sectionTitle">Poster</h2>
    <PdfStack src="/docs/poster.pdf" ariaLabel="NEMA poster PDF" />
  </section>

  <section class="section">
  		<h2 class="sectionTitle">Project Report</h2>
    <PdfStack src="/docs/NEMA.pdf" ariaLabel="NEMA dissertation PDF" />
  </section>

  <style>
    .backLink {
      display: inline-block;
      color: var(--muted);
      text-decoration: none;
      margin-bottom: 1rem;
      font-size: var(--font-size-sm);
    }
    .backLink:hover {
      text-decoration: underline;
    }
  </style>


</Layout>
