---
export interface Props {
  src: string;
  class?: string;
  ariaLabel?: string;
}

const { src, class: className = "", ariaLabel = "Embedded PDF document" } = Astro.props;
---

<div
  class={`pdfStack ${className}`}
  data-pdf-stack
  data-pdf-src={src}
  aria-label={ariaLabel}
></div>

<!-- IMPORTANT: no type, no define:vars, no is:inline. src only. -->
<script src="../scripts/pdfstack.client.js"></script>

<style>
  .pdfStack {
    width: 100%;
  }

  .pdfPage {
    width: 100%;
    margin: 0 0 1rem 0;
  }

  .pdfPage canvas {
    display: block;
    width: 100%;
    height: auto;
  }

  .pdfError {
    color: var(--muted);
    font-size: var(--font-size-sm);
  }
</style>
